<div class="mb-3 border rounded p-2 ps-3">
  <div class="d-flex align-items-center mb-1 justify-content-between">
    <div class="d-flex">
      <span class="fw-bold"><%= comment.user.name %></span>
      <i class="bi bi-dot text-secondary"></i>
      <span class="text-secondary text-small"><%= time_ago_in_words(comment.created_at) %> ago</span>
    </div>
    <div>
      <% if current_user.comments.include? comment%>
        <%= render "shared/edit_delete_buttons", model: comment%>
      <%end%>
    </div>
  </div>
  <p><%= comment.body %></p>
  <div class="d-flex justify-content-end me-2">
    <%= render "comments/likes_icon", comment: comment %>
  </div>
</div>

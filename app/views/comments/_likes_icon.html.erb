<% unless current_user.liked?(comment.id) %>
  <%= link_to(likes_path(likeable_id: comment.id, likeable_type: comment.class.name), data: { "turbo-method": :post }, class: "me-1") do %>
    <i class="bi bi-heart link-dark"></i>
  <%end%>
<%else%>
  <%= link_to(like_path(comment.likes.find_by(user_id: current_user.id)), data: { "turbo-method": :delete }, class: "me-1") do %>
    <i class="bi bi-heart-fill link-dark"></i>
  <%end%> 
<%end%>
<% if comment.likes.count > 0%>
  <%= comment.likes.count%>
<%end%>

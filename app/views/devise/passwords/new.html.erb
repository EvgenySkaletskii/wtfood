<h2 class="text-center mb-5">Forgot your password?</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }) do |f| %>
  <%= f.input :email %>
  <%= f.button :submit, "Reset password", class: "btn btn-primary" %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
<% end %>

<div class="w-50 m-auto">
  <%= render "recipes/back_button" %>
  <h1>Edit profile</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password, hint: "leave blank if you don't want to change password" %>
      <%= f.input :password_confirmation %>
      <%= f.input :current_password, hint: "type current password to confirm changes" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Save changes" %>
    </div>
  <% end %>
  <div>
    <%= link_to "Delete my account", registration_path(resource_name), data: { "turbo-method": :delete, turbo_confirm: "All your recipes, comments, and likes will be destroyed" } %>
  </div>
</div>

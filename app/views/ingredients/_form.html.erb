<%= turbo_frame_tag "ingredient_#{form.index}" do %>
  <%= form.hidden_field :id %>
  <%= form.simple_fields_for :product do |product_form| %>
    <%= product_form.input :name, placeholder: "Name", label: false, input_html: {class: "w-100"} %>
  <% end %>
  <%= form.input :amount, placeholder: "Amount", label: false %>
  <%= form.submit "Delete", 
        formaction: ingredient_path(form.index, form.object.id), 
        formmethod: :delete, 
        formnovalidate: true, 
        data: { turbo_frame: "ingredient_#{form.index}", disable_with: false },
        class: "btn btn-outline-danger"%>
  <hr>
<%end%>

<%= simple_form_for @recipe do |f| %>
  <div class="w-50">
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :body %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
